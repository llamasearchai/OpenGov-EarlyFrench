# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pyd binary

# Documentation
*.md text eol=lf
*.rst text eol=lf

# Configuration
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf
docker-compose.yml text eol=lf

# Shell scripts
*.sh text eol=lf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf
